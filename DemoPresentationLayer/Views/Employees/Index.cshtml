@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div>
    <a class="btn btn-primary mt-3" asp-action="Create">Create New Employee</a>
</div>

@if(@Model.Any())
{
    <h1>All Eployees</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(e => e.Name)</td>
                <td>@Html.DisplayNameFor(e => e.Email)</td>
                <td>@Html.DisplayNameFor(e => e.Age)</td>
                <td>@Html.DisplayNameFor(e => e.Address)</td>
                <td>@Html.DisplayNameFor(e => e.Salary)</td>
                <td>@Html.DisplayNameFor(e => e.Phone)</td>
                <td>@Html.DisplayNameFor(e => e.IsActive)</td>

                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@Html.DisplayFor(e => item.Email)</td>
                    <td>@item.Age</td>
                    <td>@item.Address</td>
                    <td>@Html.DisplayFor(e => item.Salary)</td>
                    <td>@Html.DisplayFor(e => item.Phone)</td>
                    <td>
                        @if(item.IsActive)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color:red"></i>
                        }
                    </td>

                    <td><a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id"><i class="fas fa-eye"></i> Details</a></td>
                    <td><a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Edit</a></td>
                    <td><a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert-danger">
        <h2>No Employees</h2>
    </div>
}