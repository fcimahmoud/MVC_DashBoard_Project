@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-2">
    <form method="get" asp-action="Index" class="row offset-2">
        <div class="col-10">
            <input class="form-control" type="text" placeholder="User's Email" name="email" required />
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>
</div>



@if (@Model.Any())
{
    <h1>All Users</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(u => u.Id)</td>
                <td>@Html.DisplayNameFor(u => u.FirstName)</td>
                <td>@Html.DisplayNameFor(u => u.LastName)</td>
                <td>@Html.DisplayNameFor(u => u.UserName)</td>
                <td>@Html.DisplayNameFor(u => u.Email)</td>
                <td>@Html.DisplayNameFor(u => u.Roles)</td>

                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.UserName</td>
                    <td>@Html.DisplayFor(e => item.Email)</td>
                    <td>@string.Join(',', item.Roles)</td>

                    <partial name="_ButtonsPartial" model="@item.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert-danger">
        <h2>No Users Found</h2>
    </div>
}

