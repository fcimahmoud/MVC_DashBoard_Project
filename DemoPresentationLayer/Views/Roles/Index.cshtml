@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a class="btn btn-primary mt-3" asp-action="Create">Create New Department</a>
</div>

<div class="mt-2">
    <form method="get" asp-action="Index" class="row offset-2">
        <div class="col-10">
            <input class="form-control" type="text" placeholder="Role's Name" name="name" required />
        </div>
        <div class="col-2">
            <input class="btn btn-info" type="submit" value="Search" />
        </div>
    </form>
</div>

@if (@Model.Any())
{
    <h1>All Roles</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(u => u.Id)</td>
                <td>@Html.DisplayNameFor(u => u.Name)</td>

                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>

                    <partial name="_ButtonsPartial" model="@item.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert-danger">
        <h2>No Roles Found</h2>
    </div>
}

